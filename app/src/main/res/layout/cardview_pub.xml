<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attribute="http://schemas.android.com/tools"
    android:id="@+id/pubCardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pub_cardview_height"
    android:layout_margin="@dimen/pub_cardview_margin"
    android:background="@color/white"
    attribute:cardCornerRadius="@dimen/pub_cardview_corner_radius"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="@dimen/pub_cardview_side_effect_width"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pubCircleImageView"
            android:layout_width="0dp"
            android:layout_height="@dimen/pub_circleimageview_height"
            android:layout_weight="0.3"
            android:layout_gravity="center_vertical"
            attribute:civ_border_color="@color/white"
            attribute:civ_border_width="@dimen/pub_circleimageview_border"
            />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/pub_name_text_size"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="@dimen/pub_rating_text_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>